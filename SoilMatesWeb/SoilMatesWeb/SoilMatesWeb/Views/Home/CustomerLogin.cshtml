@model SoilMatesWeb.Models.User

@{
    ViewData["Title"] = "Customer Login";
}
<div class="card">
    <h5 class="card-header">Login</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CustomerLogin" id="login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" id="email" placeholder="plantlover@soilmates.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" id="password" placeholder="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-info" onclick="Login('Customer')" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="text-light" asp-action="Index">Back To Home Page.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



