@model SoilMatesWeb.Models.User

@{
    ViewData["Title"] = "Sign up";
}

<form asp-action="SignUp" id="signup">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="Name" class="control-label text-light">Name</label>
        <input for="Name" class="form-control" id="name" placeholder="Venus" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label text-light"></label>
        <input asp-for="Email" class="form-control" id="email" placeholder="plantlover@soilmates.com" />
        <span asp-validation-for="Email" class="text-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label text-light"></label>
        <input asp-for="Password" class="form-control" id="password" placeholder="password" />
        <span asp-validation-for="Password" class="text-warning"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-info" onclick="SignUp()" />
    </div>
</form>

<div>
    <a class="text-light" asp-action="Index">Back To Home Page.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

