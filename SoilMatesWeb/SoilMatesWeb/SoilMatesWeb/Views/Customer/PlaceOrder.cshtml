@model SoilMatesWeb.Models.ShoppingCart

@{
    ViewData["Title"] = "PlaceAnOrder";
}

<div class="card m-3">
    <h5 class="card-header">Enter Location to Shop from</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form id="locationSelect" asp-action="PlaceOrder">
                    <div class="form-group" id="location">
                        <label for="locationId">Enter location Id</label>
                        <input type="number" class="form-control" id="locationId" name="locationId" placeholder="select from store locations" min="1" max="11">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="See Products" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_Locations" />