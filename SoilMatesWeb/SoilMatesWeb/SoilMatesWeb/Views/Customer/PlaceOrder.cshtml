@model SoilMatesWeb.Models.ShoppingCart

@{
    ViewData["Title"] = "Place An Order";
}

<partial name="_Locations" />

<div class="card p-4">
    <form id="SelectLocation">
        <div class="form-group">
            <label for="idLocation" class="control-label">Location Id</label>
            <input for="idLocation" class="form-control" id="idLocation" placeholder="Inventory Id" />
        </div>
        <button type="button" class="btn btn-info btn-lg btn-block" onclick="getInvetory()">See All Inventory</button>
    </form>
</div>

<div class="container p-2 mt-4">
    <table class="table table-hover table-light" id="StoreInventory">
        <thead>
        <th scope="col">Product Id</th>
        <th scope="col">Product Name</th>
        <th scope="col">Product description</th>
        <th scope="col">Quantity</th>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>



